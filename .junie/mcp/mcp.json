{
    "mcpServers": {
        "laravel-boost": {
            "command": "php",
            "args": [
                "artisan",
                "boost:mcp"
            ],
            "alwaysAllow": [
                "application-info",
                "browser-logs",
                "database-connections",
                "database-query",
                "database-schema",
                "get-absolute-url",
                "get-config",
                "last-error",
                "list-artisan-commands",
                "list-available-config-keys",
                "list-available-env-vars",
                "list-routes",
                "read-log-entries",
                "report-feedback",
                "search-docs"
            ]
        }
    }
}
